@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Hello, you are logged in as</h1>
    <p class="lead">@User.Identity.Name!</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>About page</h2>
        <p>
            If navigation is not showing for some reason (compatability view?) here is the link to the Abtou page.
        </p>
        <p>
            @Html.ActionLink("About", "About", "Home", new { @class = "btn btn-default" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Contact</h2>
        <p>Same for contact zone</p>
        <p>
            @Html.ActionLink("Contact", "Contact", "Home", new { @class = "btn btn-default" })
        </p>
    </div>
</div>